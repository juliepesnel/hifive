<div class="container">
  <%= simple_form_for(@event) do |f| %>
    <h3 id="margin-top">Choose your friends</h3>
    <div class="selectable_users" id="myscroll-user">
        <div class='myflextest'>
          <%= f.fields_for :participations do |uf| %>
            <% User.all.each do |user| %>
              <label>
                <%= uf.check_box "user_ids", { multiple: true }, user.id, nil %>
                <% if current_user != user %>
                  <%= avatar_image_tag user %>
                 <p><%= user.first_name %></p>
                <% end %>
              </label>
            <% end %>
          <% end %>
        </div>
    </div>
    <h3 id="h3" class="margin-top">Choose a restaurant</h3>
    <div class="selectable_restaurants" id="myscroll">
      <div class='myflextest'>
      <% Restaurant.all.each do |restaurant| %>
        <label>
          <%= f.radio_button "restaurant_id", restaurant.id %>
          <%= image_tag restaurant.picture %>
          <div class="category-restaurant text-center">
            <%= restaurant.category.name %>
          </div>
          <div class="text_seclectable_restaurant text-center">
            <%= restaurant.name %>
            <p>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star" aria-hidden="true"></i>
              <i class="fa fa-star-o" aria-hidden="true"></i>
            </p>
          </div>
        </label>
      <% end %>
      </div>
    </div>
    <div class="when">
      <div class="row">
        <div class="col-xs-12 text-left">
          <h3>When ?</h3>
          <%= f.input_field :happen_at %>
        </div>
      </div>
    </div>
    <div class="answer">
      <div class="row">
        <div class="col-xs-12 text-left">
          <h3>Answer before :</h3>
          <%= f.input_field :due_at %>
        </div>
      </div>
    </div>
    <div class="text-center padded">
      <%= f.button :submit, class: "button-create-pad" %>
      <% end %>
  </div>
</div>
