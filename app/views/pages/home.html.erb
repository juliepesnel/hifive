<div id="center">
  <div id="wrapper-home">


  <h1>Create and organise your outings very simply!</h1>






  </div>
  <%= link_to t(".top_call_to_action", default: "Create an event"), new_event_path, class: "button-create-pad" %>
</div>
<div class="wrapper-home">
  <div class="container-home text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-md-4">
        <i class="fa fa-hand-peace-o fa-4x" aria-hidden="true"></i>
        <h2>
          1-Click
        </h2>
        <h5>
          "HiFive organises your outings with your friends in 5 clicks"
        </h5>
      </div>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <i class="fa fa-paper-plane-o fa-4x" aria-hidden="true"></i>
        <h2>
          2-Send
        </h2>
        <h5>
          "Send a request to all your friends at once"
        </h5>
      </div>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <i class="fa fa-bolt fa-4x" aria-hidden="true"></i>
        <h2>
          3-Enjoy!
        </h2>
        <h5>
          "Spend less time organising and more with your friends!"
        </h5>
      </div>
      <div class="row" id="sign_up_home">
        <div class="col-xs-12 col-sm-12 col-md-12">
          <%= link_to t(".sign_up", default: "Sign up"),  new_user_registration_path, class: "button-signup-home" %>
        </div>
      </div>
    </div>
  </div>
</div>







  <div class="modal" id="new-taste" tabindex="-1" role="dialog" aria-labelledby="TastesNew">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          Loading...
        </div>
      </div>
    </div>
  </div>




<% content_for :after_js do %>
  <script>
    $(function(){
      var url = document.location.href;
      var anchor = url.substring(url.indexOf("#") + 1);
      if (anchor == "sign_up" || anchor == "sign_in") {
        $('#new-taste').modal({ show: true, remote: "<%= new_taste_path %>" });
      }
    });
  </script>
<% end %>




